<SwappableInput>:
    size: 200, 100
    size_hint: (1, 1)
    color: [0, 0, 0, 1]
    # Thanks too https://stackoverflow.com/a/40481767
    # left, right
    padding_x: [self.center[0] - self._get_text_width(max(self._lines, key=len), self.tab_width, self._label_cached) / 2.0, 0] if self.text else [self.center[0], 0]
    # top, bottom
    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

<SwappableLabel>:
    color: [0, 0, 0, 1]

<InputLabel>:
    label: label
    input: None
    name: "Block 1"
    size: 200, 100
    size_hint: (None, None)
    SwappableLabel:
        id: label
        text: root.name
        size: root.size
        size_hint: root.size_hint
